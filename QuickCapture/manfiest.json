{
    "manifest_version": 3,
    "name": "Quick Capture",
    "version": "1.0",
    "description": "Save notes and todos directly to my Notion DB",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://api.notion.com/*"
    ]
}